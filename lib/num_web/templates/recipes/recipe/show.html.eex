<h2><%= @recipe.title %></h2>

<%= if @recipe.photo != nil do %>
<li>
<img src="<%= encode_photo(@recipe)%>"/>
</li>
<% end %>

<%= @recipe.body |> urls_to_anchors() |> markdown() %>

<span><%= link gettext("Edit"), to: recipes_recipe_path(@conn, :edit, @recipe), class: "btn btn-default" %></span>
<span><%= link gettext("Back"), to: recipes_recipe_path(@conn, :index), class: "btn btn-default" %></span>
